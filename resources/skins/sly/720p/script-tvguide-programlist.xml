<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="false">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>

    <controls>

        <control type="image">
            <description>background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>background.png</texture>
            <visible>true</visible>
        </control>

        <control type="image">
            <description>background</description>
            <posx>0</posx>
            <posy>240</posy>
            <width>1280</width>
            <height>40</height>
            <texture>background2.png</texture>
            <visible>true</visible>
        </control>

        <control type="label" id="1001">
            <description>Title</description>
            <left>0</left>
            <top>246</top>
            <width>180</width>
            <height>20</height>
            <font>font13_title</font>
            <textcolor>orange</textcolor>
            <shadowcolor>black</shadowcolor>
            <align>center</align>
            <aligny>center</aligny>
            <label>Title</label>
        </control>

        <control type="label">
            <description>Displays todays date</description>
            <posx>10r</posx>
            <posy>220</posy>
            <width>280</width>
            <height>20</height>
            <textcolor>bbffffff</textcolor>
            <shadowcolor>black</shadowcolor>
            <font>font13</font>
            <align>right</align>
            <aligny>center</aligny>
            <visible>true</visible>
            <label>$INFO[System.Date(DDD)], $INFO[System.Date(dd)] $INFO[System.Date(MMM)]</label>
        </control>

        <control type="label">
            <description>time label</description>
            <right>10</right>
            <top>245</top>
            <width>200</width>
            <height>30</height>
            <align>right</align>
            <aligny>center</aligny>
            <font>font28_title</font>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <label>$INFO[System.Time(hh:mm)]</label>
        </control>

        <control type="group">
            <description>Program List</description>
            <visible>true</visible>
            <control type="group">
                <left>0</left>
                <top>220</top>
                <control type="label">
                    <description>Airing label</description>
                    <left>180</left>
                    <top>26</top>
                    <width>180</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>Airing</label>
                </control>
                <control type="label">
                    <description>Time label</description>
                    <left>380</left>
                    <top>26</top>
                    <width>200</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>Time</label>
                </control>
                <control type="label">
                    <description>Length</description>
                    <left>580</left>
                    <top>26</top>
                    <width>100</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>Duration</label>
                </control>
                <control type="label">
                    <description>Title</description>
                    <left>700</left>
                    <top>26</top>
                    <width>550</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>369</label>
                </control>

                <control type="list" id="1000">
                    <viewtype label="19030">list</viewtype>
                    <left>0</left>
                    <top>70</top>
                    <width>1280</width>
                    <height>430</height>
                    <onup>1000</onup>
                    <ondown>1000</ondown>
                    <onleft>-</onleft>
                    <onright>-</onright>
                    <pagecontrol>-</pagecontrol>
                    <itemlayout height="60">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1280</width>
                            <height>60</height>
                            <texture>tvg-playing-nofocus.png</texture>
                            <visible>!IsEmpty(ListItem.Property(PlayingNow))</visible>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>160</width>
                            <height>40</height>
                            <info>ListItem.Icon</info>
                            <aspectratio align="center">keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>180</left>
                            <top>10</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Airing)</info>
                        </control>
                        <control type="label">
                            <left>380</left>
                            <top>10</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(StartTime)</info>
                        </control>
                        <control type="label">
                            <left>580</left>
                            <top>10</top>
                            <width>100</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Duration)</info>
                        </control>
                        <control type="label">
                            <description>Program Title</description>
                            <left>700</left>
                            <top>10</top>
                            <width>550</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="60">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1280</width>
                            <height>60</height>
                            <texture>tvg-button-focus.png</texture>
                            <visible>IsEmpty(ListItem.Property(PlayingNow))</visible>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1280</width>
                            <height>60</height>
                            <texture>tvg-playing-focus.png</texture>
                            <visible>!IsEmpty(ListItem.Property(PlayingNow))</visible>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>160</width>
                            <height>40</height>
                            <info>ListItem.Icon</info>
                            <aspectratio align="center">keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>180</left>
                            <top>10</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>black</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Airing)</info>
                        </control>
                        <control type="label">
                            <left>380</left>
                            <top>10</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>black</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(StartTime)</info>
                        </control>
                        <control type="label">
                            <left>580</left>
                            <top>10</top>
                            <width>100</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>black</textcolor>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Duration)</info>
                        </control>
                        <control type="label">
                            <description>Program Title</description>
                            <left>700</left>
                            <top>10</top>
                            <width>550</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>black</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="image">
                            <left>1080</left>
                            <top>0</top>
                            <width>200</width>
                            <height>60</height>
                            <info>ListItem.Property(ProgramImage)</info>
                            <aspectratio>keep</aspectratio>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>

        <control type="group">
            <top>0</top>
            <height>200</height>
            <control type="label">
                <description>Program title</description>
                <posx>500</posx>
                <posy>10</posy>
                <width>620</width>
                <height>50</height>
                <textcolor>FF00B8FF</textcolor>
                <shadowcolor>22000000</shadowcolor>
                <font>font24_title</font>
                <align>center</align>
                <aligny>top</aligny>
                <label>$INFO[Container(1000).ListItem.Label]</label>
            </control>

            <control type="label">
                <description>Channel name</description>
                <posx>360</posx>
                <posy>10</posy>
                <width>160</width>
                <height>50</height>
                <textcolor>ccffffff</textcolor>
                <font>font13</font>
                <align>left</align>
                <aligny>top</aligny>
                <label>$INFO[Container(1000).ListItem.Property(ChannelName)]</label>
                <visible>!Player.HasMedia</visible>
            </control>

            <control type="image">
                <description>Channel logo</description>
                <posx>360</posx>
                <posy>10</posy>
                <width>160</width>
                <height>30</height>
                <align>left</align>
                <aspectratio align="left">keep</aspectratio>
                <fadetime>500</fadetime>
                <texture>$INFO[Container(1000).ListItem.Icon]</texture>
                <visible>Player.HasMedia</visible>
            </control>
            <control type="label">
                <description>Program time</description>
                <posx>1260</posx>
                <posy>10</posy>
                <width>1090</width>
                <height>50</height>
                <textcolor>ccffffff</textcolor>
                <font>font13</font>
                <align>right</align>
                <aligny>top</aligny>
                <label>$INFO[Container(1000).ListItem.Property(StartTime)]</label>
            </control>

            <control type="textbox">
                <description>Program description</description>
                <posx>360</posx>
                <posy>59</posy>
                <width>898</width>
                <height>142</height>
                <textcolor>bbffffff</textcolor>
                <font>font13</font>
                <wrapmultiline>true</wrapmultiline>
                <label>$INFO[Container(1000).ListItem.Property(Plot)]</label>
                <autoscroll time="3600" delay="6000" repeat="6000">true</autoscroll>
            </control>
            <control type="image" id="12345">
                <description>Program image</description>
                <posx>2</posx>
                <posy>10</posy>
                <width>350</width>
                <height>197</height>
                <aligny>top</aligny>
                <aspectratio>keep</aspectratio>
                <fadetime>500</fadetime>
                <texture>$INFO[Container(1000).ListItem.Property(ProgramImage)]</texture>
                <visible>!Player.HasMedia</visible>
            </control>

            <control type="image">
                <description>Program image backup for no channel image</description>
                <posx>2</posx>
                <posy>10</posy>
                <width>350</width>
                <height>197</height>
                <aligny>top</aligny>
                <aspectratio>keep</aspectratio>
                <fadetime>500</fadetime>
                <texture>tv.jpg</texture>
                <visible>StringCompare(Control.GetLabel(12345),) + !Player.HasMedia</visible>
            </control>

            <control type="videowindow">
                <description>video window pip</description>
                <posx>2</posx>
                <posy>10</posy>
                <width>350</width>
                <height>197</height>
                <aligny>top</aligny>
                <aspectratio>keep</aspectratio>
            </control>

            <control type="image">
                <description>Channel logo</description>
                <posx>5</posx>
                <posy>170</posy>
                <width>100</width>
                <height>35</height>
                <align>left</align>
                <aspectratio align="left">keep</aspectratio>
                <fadetime>500</fadetime>
                <visible>!Player.HasMedia</visible>
                <texture>$INFO[Container(1000).ListItem.Icon]</texture>
            </control>

            <control type="progress" id="12344">
                <posx>360</posx>
                <posy>48</posy>
                <width>901</width>
                <height>10</height>
                <lefttexture/>
                <righttexture/>
                <texturebg border="3" colordiffuse="">panel_trans.png</texturebg>
                <midtexture border="3" colordiffuse="FF00ff48">panel.png</midtexture>
                <visible>IntegerGreaterThan(Control.GetLabel(12344),0)</visible>
                <info>Container(1000).ListItem.Property(Completed)</info>
            </control>

            <control type="image">
                <posx>360</posx>
                <posy>48</posy>
                <width>901</width>
                <height>10</height>
                <texture border="3" colordiffuse="">thinborder.png</texture>
                <visible>IntegerGreaterThan(Control.GetLabel(12344),0)</visible>
            </control>
        </control>
    </controls>
</window>