<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
    <controls>

        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>menu-stream.png</texture>
        </control>

        <control type="label" id="4000">
            <posx>330</posx>
            <posy>400</posy>
            <width>600</width>
            <height>80</height>
            <textcolor>white</textcolor>
            <font>font13</font>
            <align>center</align>
            <label>[B]$ADDON[script.tvguide.dvr 30700][/B]</label>
            <wrapmultiline>true</wrapmultiline>
        </control>

        <control type="fixedlist" id="1000">
            <posx>160</posx>
            <posy>200</posy>
            <width>950</width>
            <height>170</height>
            <viewtype label="list">list</viewtype>
            <orientation>horizontal</orientation>
            <focusposition>2</focusposition>

            <itemlayout width="200" height="200">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>200</width>
                    <height>180</height>
                    <texture>menu-grey.png</texture>
                    <visible>true</visible>
                </control>
                <control type="image">
                    <posx>31</posx>
                    <posy>16</posy>
                    <width>128</width>
                    <height>128</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>15</posx>
                    <posy>140</posy>
                    <width>170</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="200" height="200">
                <control type="image">
                    <posx>0</posx>
                    <posy>-5</posy>
                    <width>200</width>
                    <height>180</height>
                    <texture>menu-grey-focus.png</texture>
                    <visible>Control.HasFocus(1000)</visible>
                </control>
                <control type="image">
                    <posx>31</posx>
                    <posy>16</posy>
                    <width>128</width>
                    <height>128</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>15</posx>
                    <posy>140</posy>
                    <width>170</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
					<scroll>true</scroll>
				 </control>
            </focusedlayout>
        </control>
    </controls>
</window>